<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.piscicultura.monitoreo.controller.LoginController"
            prefHeight="350.0" prefWidth="400.0">

    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="50" prefWidth="300">
            <Label text="Inicio de Sesión" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <VBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Usuario:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtNombreUsuario" promptText="Ingrese su nombre de usuario" prefWidth="250"/>
            </VBox>
            
            <VBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Contraseña:" style="-fx-font-weight: bold;"/>
                <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña" prefWidth="250"/>
            </VBox>

            <Button text="Iniciar sesión" onAction="#handleLogin" prefWidth="150" 
                    style="-fx-background-color: #2E8B57; -fx-text-fill: white; -fx-font-weight: bold;"/>
            
            <!-- Enlace para recuperar contraseña -->
            <Button text="¿Olvidó su contraseña?" onAction="#handleRecuperarPassword" 
                    style="-fx-background-color: transparent; -fx-text-fill: #1E90FF; -fx-underline: true; -fx-border-color: transparent;"/>
            
            <Label fx:id="lblMensaje" wrapText="true" alignment="CENTER" prefWidth="250"/>
        </VBox>
    </children>
</AnchorPane>
