<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.piscicultura.monitoreo.controller.RecuperarPasswordController" 
      spacing="20" style="-fx-background-color: #f8f9fa; -fx-padding: 30;" 
      prefWidth="500" prefHeight="500" alignment="TOP_CENTER">
   
   <!-- Título -->
   <Label text="Recuperar Contraseña" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
      <padding>
         <Insets bottom="10"/>
      </padding>
   </Label>
   
   <!-- Descripción -->
   <Label text="Ingrese su email para recibir un código de verificación" 
          style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-wrap-text: true;" 
          alignment="CENTER" maxWidth="400"/>
   
   <!-- Paso 1: Solicitar email -->
   <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;" 
         maxWidth="400">
      <Label text="Paso 1: Verificar Email" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
      
      <Label text="Email registrado:"/>
      <TextField fx:id="txtEmail" promptText="ejemplo@gmail.com" prefHeight="35"/>
      
      <Button fx:id="btnGenerarToken" text="Enviar Código por Email" 
              onAction="#handleGenerarToken" 
              style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 35; -fx-pref-width: 200;"
              defaultButton="true"/>
   </VBox>
   
   <!-- Paso 2: Token y nueva contraseña -->
   <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;" 
         maxWidth="400">
      <Label text="Paso 2: Restablecer Contraseña" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
      
      <Label text="Código de verificación:"/>
      <TextField fx:id="txtToken" promptText="Ingrese el código de 6 dígitos" prefHeight="35"/>
      
      <Label text="Nueva Contraseña:"/>
      <PasswordField fx:id="txtNuevaPassword" promptText="Ingrese nueva contraseña" prefHeight="35"/>
      
      <HBox spacing="10" alignment="CENTER">
         <Button fx:id="btnCambiarPassword" text="Cambiar Contraseña" 
                 onAction="#handleCambiarPassword" 
                 style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 35; -fx-pref-width: 150;"
                 defaultButton="true"/>
         
         <Button fx:id="btnCancelar" text="Cancelar" 
                 onAction="#handleCancelar" 
                 style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-height: 35; -fx-pref-width: 100;"/>
      </HBox>
   </VBox>
   
   <!-- Mensajes -->
   <VBox spacing="5" maxWidth="400">
      <Label fx:id="lblMensaje" wrapText="true" style="-fx-font-size: 12; -fx-alignment: center;" 
             prefHeight="60"/>
   </VBox>
   
</VBox>
