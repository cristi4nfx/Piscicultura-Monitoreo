<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.piscicultura.monitoreo.controller.AdminController"
            prefWidth="1000" prefHeight="650">

    <!-- TOP: Menú -->
    <top>
    <VBox spacing="6">
            <MenuBar>
                <Menu text="Usuarios">
                    <MenuItem text="Crear usuario"   onAction="#onCrearUsuario"/>
                    <MenuItem text="Listar usuarios" onAction="#onListarUsuarios"/>
                </Menu>
                <Menu text="Sistema">
                    <MenuItem text="Cerrar sesión" onAction="#onCerrarSesion"/>
                </Menu>
            </MenuBar>

            <!-- Barra superior con bienvenida -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Panel de Administración" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="Bienvenido:"/>
                <Label fx:id="lblNombre" style="-fx-font-weight: bold;"/>
                <Label text="| Rol:"/>
                <Label fx:id="lblRol" style="-fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <!-- LEFT: Acciones rápidas -->
    <left>
        <VBox spacing="8">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <Label text="Acciones rápidas" style="-fx-font-weight: bold;"/>
            <Button text="Inicio" onAction="#onInicio" maxWidth="Infinity"/>
            <Button text="Registrar usuario" onAction="#onCrearUsuario" maxWidth="Infinity"/>
            <Button text="Ver usuarios" onAction="#onListarUsuarios" maxWidth="Infinity"/>
        </VBox>
    </left>


    <!-- CENTER: Área principal (placeholder) -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 16;">
            <Label fx:id="lblEstado"
                   text="Selecciona una acción del menú o de la izquierda."
                   style="-fx-text-fill: #555; -fx-font-size: 14px;"/>
        </StackPane>
    </center>


    <!-- BOTTOM: Barra de estado -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Estado:"/>
            <Label fx:id="lblBarraEstado" text="Listo"/>
        </HBox>
    </bottom>

</BorderPane>
