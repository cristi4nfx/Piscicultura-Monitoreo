<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.piscicultura.monitoreo.controller.CrudFincaController"
      spacing="12" alignment="TOP_CENTER"
      style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom,#f9fbff,#eef4ff);">

    <!-- Título -->
    <Label text="Fincas Registradas"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- Botones -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="Actualizar"
                style="-fx-background-color:#4CAF50; -fx-text-fill:white;"
                onAction="#onActualizar"/>
        <Button text="Cerrar Todas"
                style="-fx-background-color:#f44336; -fx-text-fill:white;"
                onAction="#onCerrarTodas"/>
    </HBox>

    <!-- Área tipo escritorio -->
    <AnchorPane fx:id="desktopPane"
                prefHeight="480" prefWidth="900"
                style="-fx-background-color: linear-gradient(to bottom,#f7fbff,#eef6ff);
                       -fx-border-color:#cfd8dc;
                       -fx-border-width:1;
                       -fx-background-radius:8;
                       -fx-border-radius:8;"
                VBox.vgrow="ALWAYS"/>

</VBox>
